{
    "workbench.iconTheme": "file-icons",
    "activitusbar.activeColour": "Red",
    "activitusbar.inactiveColour": "Blue",
    "C_Cpp.default.cppStandard": "c++14",
    "window.zoomLevel": 0,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        }
    ],
    "files.autoSave": "onFocusChange",
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.default.includePath": [
        "/usr/include/**",
        "/usr/local/include/**"
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.codeActionsOnSave": null,
    "editor.dragAndDrop": false,
    "editor.showFoldingControls": "always",
    "editor.tabCompletion": "on",
    "editor.wrappingIndent": "deepIndent",
    "editor.suggest.localityBonus": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/build": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.editor.revealIfOpen": true,
    "debug.console.closeOnEnd": true,
    "debug.console.historySuggestions": false,
    "terminal.integrated.cursorBlinking": true,
    "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "newLine",
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "newLine",
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,
    "C_Cpp.vcFormat.newLine.scopeBracesOnSeparateLines": true,
    "C_Cpp.vcFormat.space.beforeInitializerListOpenBrace": true,
    "git.branchSortOrder": "alphabetically",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "block",
    "vim.cursorStylePerMode.visual": "block",
    "vim.leader": ",",
    "vim.vimrc.enable": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "cSpell.userWords": [
        "exteroceptive",
        "gtsam",
        "hypercomplex",
        "mothership",
        "nonlinearities",
        "numpy",
        "odometry",
        "optim",
        "pyplot",
        "robo",
        "robocentric",
        "scipy",
        "turtlebot"
    ],
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "cpplint.cpplintPath": "/home/brendon/.local/bin/cpplint",
    "python.linting.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "*.cpp"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=80"
    ],
    "python.sortImports.args": [
        "--profile",
        "black"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    }
    "editor.formatOnSave": true
}
